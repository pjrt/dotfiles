	status = auto
	ui = auto

[alias]
    st = status -sb
    ci = commit
    cl = clone
    co = checkout
    br = branch
    ps = push
    pl = pull
    dc = diff --cached
    logme = log --graph --author="prodriguez"
    logg = log --graph
    gn = grep -n
    todo = grep -n -E "pr.*:.*todo"
    unadd = reset
    ready = rebase -i @{u}
    lg = log --pretty=format:\"%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold yellow)<%an>%Creset\"
    lgg = log --graph --decorate --all --oneline
    purr = pull --rebase
    m = branch -a --merged
    nm = branch -a --no-merged
    continue = rebase --continue
    skip = rebase --skip
    abort = rebase --abort

[push]
	default = current

[core]
	editor = vim

